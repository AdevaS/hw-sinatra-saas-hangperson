<h2>Guess a letter</h2>

<% if flash[:message] %>
  <p>
    <span class="error"><%= flash[:message] %></span>
  </p>
<% else %>
  <p>
    <span class="hidden">hidden</span>
  </p>
<% end %>

<p>
  Moves Left:
  <span class="guesses"><%= 7 - (@game.wrong_guesses.size % 7) %></span>
</p>

<p>
  Wrong Guesses:
  <span class="guesses"><%= @game.wrong_guesses %></span>
</p>

<p>
  Word so far:
  <span class="word"><%= @game.hidden_word %></span>
</p>

<form action="/guess" method="post">
  <input type="text" size="1" name="guess" autocomplete="off" autofocus="true"/>
  <input type="submit" value="Guess!"/>
</form>

<%= erb :new %>
